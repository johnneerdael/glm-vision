# Z.AI MCP Vision Server - Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
Z_AI_API_KEY=your_actual_api_key_here

# Platform Configuration (ZAI, ZHIPU, or AUTO for auto-detection)
PLATFORM_MODE=AUTO

# Optional: Custom API Base URL
# Z_AI_BASE_URL=https://api.z.ai/api/paas/v4/

# Model Configuration
VISION_MODEL=glm-4.5v
TEMPERATURE=0.8
TOP_P=0.6
MAX_TOKENS=16384

# Request Configuration
TIMEOUT_SECONDS=300
RETRY_COUNT=2
RETRY_DELAY_SECONDS=1.0

# File Size Limits (in MB)
MAX_IMAGE_SIZE_MB=5
MAX_VIDEO_SIZE_MB=8

# Server Configuration
SERVER_NAME=zai-mcp-server
SERVER_VERSION=2.0.0
TRANSPORT=stdio
HOST=0.0.0.0
PORT=8000

# Logging and Debugging
LOG_LEVEL=INFO
DEBUG=false

# Rate Limiting (requests per second)
RATE_LIMIT=50